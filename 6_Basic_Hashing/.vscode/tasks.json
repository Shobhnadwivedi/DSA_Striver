{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Active C++ File (clang++)",
      "type": "shell",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=gnu++14",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": { "cwd": "${fileDirname}" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Run Active File (Integrated Terminal)",
      "type": "shell",
      "command": "${fileDirname}/${fileBasenameNoExtension}",
      "options": {
        "cwd": "${fileDirname}",
        "shell": { "executable": "/bin/zsh", "args": ["-lc"] }
      },
      "presentation": { "echo": true, "reveal": "always", "panel": "shared" }
    }
  ],
  "compounds": [
    {
      "label": "Build And Run (Integrated Terminal)",
      "tasks": [
        "Build Active C++ File (clang++)",
        "Run Active File (Integrated Terminal)"
      ]
    }
  ]
}
